       </GridPane>

       <HBox alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="2">
           <Label minWidth="80" text="源文件" />
           <TextField fx:id="inputSourcePath" minWidth="200" />
           <Button fx:id="btnSelSourcePath" text="选择路径" />
       </HBox>

       <HBox alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="3">
           <Label minWidth="80" text="生成路径" />
           <TextField fx:id="inputSavePath" minWidth="200" />
           <Button fx:id="btnSelSavePath" text="选择路径" />
       </HBox>

       <Button fx:id="btnCreate" alignment="CENTER" defaultButton="true" text="生成" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
